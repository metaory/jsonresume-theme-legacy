{{> components/hr.hbs size="md" }}
{{#if references.length}}
  <section class="section">
    <header>
      <h2 class='section-title'>
        <span class="icon {{ ICO "reference" }}"></span>
        {{ TITLE "references" }}
      </h2>
    </header>
    <section id="references">
      {{#each references}}
        <div class="item">
          {{#if reference}}
            <blockquote class="reference">
              &#8220;&#32;{{ reference }}&#32;&#8221;
            </blockquote>
          {{/if}}
          {{#if name}}
            <div class="name">{{ name }}</div>
          {{/if}}
        </div>
      {{/each}}
    </section>
  </section>
{{/if}}
